doctype html
html(lang="en", data-bs-theme="auto")
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(name="description")
        meta(name="author", content="Mark Otto, Jacob Thornton, and Bootstrap contributors")
        meta(name="generator", content="Hugo 0.115.4")
        title #{title}
        link(rel="canonical", href="https://getbootstrap.com/docs/5.3/examples/album/")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/@docsearch/css@3")
        link(href="/css/bootstrap.min.css", rel="stylesheet")
        
    body
        
        main
            .row.py-lg-5
                .col-lg-6.col-md-8.mx-auto
                    h1.fw-light(style='text-align: center;') Characters
                              
            .album.py-5.bg-body-tertiary
                .container
                    .row.row-cols-1.row-cols-sm-2.row-cols-md-3.g-4
                        each data in characters   
                            .col
                                .card.shadow-sm
                                    <img class="bd-placeholder-img.card-img-top", src="#{data.image}" width="100%", height="225"></img>
                                        .card-body(style='line-height: normal;')
                                            p.card-text(style='text-align: center;')=data.name
                                            p.card-text Last appereances: #{data.location.name}
                                            p.card-text Gender: #{data.gender}
                                            p.card-text Appereances on first season: #{data.tempOne}
                                            p.card-text Appereances on second season: #{data.tempTwo}
                                            p.card-text Appereances on thierd season: #{data.tempThree}
                                            p.card-text Appereances: #{data.appereances}
                                            .d-flex.justify-content-between.align-items-center
                                                .btn-group
                                                small.text-body-secondary Status: #{data.status}
        footer.text-body-secondary.py-5
            .container
                p.float-end.mb-1
                    a(href="#") Back to top

script(src="/js/bootstrap.bundle.min.js")
